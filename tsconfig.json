{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "watch": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
